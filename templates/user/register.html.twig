<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Registration!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            <style>
                .show-hide-password{
                    position: absolute;
                    top: 47%;
                    right: 0%;
                    border: 1px solid lightgray;
                    padding: 6px 15px;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script>
                function myFunction(showHide) {
                  var x = document.getElementById("inputPassword");
                  if (x.type === "password") {
                    x.type = "text";
                  } else {
                    x.type = "password";
                  }

                  if(showHide === 'show'){
                      $('.show-password').hide();
                      $('.hide-password').show();
                  }else{
                      $('.hide-password').hide();
                      $('.show-password').show();
                  }
                }
            </script>
        {% endblock %}
    </head>
    <body>
        <div class="row mt-5">
            <div class="col-md-7"></div>
            <div class="col-md-4">
                <form method="post" action="{{ path('registration') }}">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Registration</h1>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="inputEmail">First Name</label>
                            <input type="text"  name="first_name" class="form-control" placeholder="first name" autofocus>
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail">Last Name</label>
                            <input type="text"  name="last_name" class="form-control" placeholder="last name" autofocus>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="inputEmail">Username</label>
                            <input type="text"  name="username" class="form-control" placeholder="username" autofocus>
                        </div>
                        <div class="col-md-6">
                            <label for="roles">You are...</label>
                            <select class="form-control form-control-sm" name="roles">
                              <option value="BASIC_MEMBER">Basic Member</option>
                              <option value="BOOK_READER">Book Reader</option>
                              <option value="BOOK_WRITER">Book Writer</option>
                              <option value="READER_WRITER">Reader & Writer</option>
                            </select>
                        </div>
                    </div>
                    <div class="row m-0">
                        <label for="inputEmail">Email</label>
                        <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="row m-0 position-relative">
                        <label for="inputEmail">Password</label>
                        <input type="password" name="password" value="" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <span class="show-hide-password">
                            <i class="fa-solid fa-eye show-password" onclick="myFunction('show')"></i>
                            <i class="fa-solid fa-eye-slash hide-password" style="display: none" onclick="myFunction('hide')"></i>
                        </span>
                    </div>
                    <div class="mt-2">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Register
                        </button>
                    </div>

                    <div class="row">
                        <div class="text-center col-sm-12 mt-5">
                            <strong>Already have an account?</strong>
                            <a href="{{ path('register') }}" class="text-info">Signing Now</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
